<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <!-- Add Bootstrap CSS from a CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <style>
        body{
            background-color: rgb(184, 202, 172);
        }
        .form-control{
            background-color: rgb(237, 249, 230);

        }
        .btn{
            margin-top: 5px;
        }
    </style>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-check-circle"></i> <!-- Font Awesome checkmark icon -->
                To-Do List
            </a>
            <!-- Live Date and Time -->
            <b><div id="liveDateTime" class="ml-auto navbar-date-time"></div></b>        </div>
    </nav>
    

    <div class="container mt-4">
        <!-- To-Do Form -->
        <form action="/render" method="post" class="mb-4">
            <div class="form-group">
                <label for="name">Task:</label>
                <input type="text" class="form-control" name="items" id="name" required>

                <input type="hidden" name="email" value="<%= res1.email %>">

            </div>
            <button type="submit" class="btn btn-primary">Add Task</button>
        </form>

        <!-- To-Do List --> 
        <ul class="list-group">
            <% for(let i=0; i<data1.length; i++) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <input type="checkbox" name="itemCheckbox" value="<%= data1[i].arraydata %>">
                        <%= data1[i].arraydata %>
                    </div>
                    <div>
                        <a href="/delete_todo/<%= data1[i].arraydata %>?email=<%= res1.email %>" class="btn btn-danger btn-sm">Delete</a>
                    <% console.log("this is form emial:",res1.email); %>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    
    <!-- JavaScript to display live date and time -->
    <script>
        function updateDateTime() {
            const dateTimeElement = document.getElementById("liveDateTime");
            const now = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' };
            dateTimeElement.textContent = now.toLocaleDateString('en-US', options);
        }

        // Update the date and time every second
        setInterval(updateDateTime, 1000);

        // Initial update
        updateDateTime();
    </script>
</body>
</html>